#:kivy 1.11.1
<MyWidget>:
    orientation: 'vertical'
    BoxLayout:
        orientation:'horizontal'
        size_hint: (1,0.1)
        canvas.before:
            Color:
                rgb: 0.5, 0.5, 0.5  # Cor cinza
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: 'Supervisório Sistema Refrigeração'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Configurações'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'MODBUS'
                    on_release: root._modbusPopup.open()
                Button:
                    text: 'Scan Time'
                    on_release: root._scanPopup.open()
        Image:
            size_hint: 0.30,1
            id: img_con
            source: 'imgs/desconectado.png'
    FloatLayout:
        canvas:
            Color:
                rgb: 0.5, 0.5, 0.5
            Rectangle:
                size: self.size
        Label:
            id: lb_temp
            size_hint: (None,None)
            size: (termometro.size[0]*0.25,termometro.size[1])
            pos_hint: {'x': 0.3, 'y': 0.3}
            canvas:
                Color:
                    rgb: 1,0,0
                Rectangle:
                    size: self.size
                    pos: (self.pos[0]+self.width*1.5,self.pos[1])
        Image:
            id: termometro
            source: 'imgs/termometro.png'
            size_hint: 0.2,0.2
            pos_hint: lb_temp.pos_hint
        VarLabel:
            id:temperaturasa
            pos_hint:{'top': 0.90,'right':1.3}
        BoxLayout:
            orientation:'horizontal'
            size_hint: 0.2,0.2
            pos_hint: {'x': 0.05, 'y': 0}
            Button:
                id:bt_scroll
                text:'Scroll'
                color: 0.2, 0.2, 0.2, 1
                background_normal: ''
                background_color: 0.5,0.5,0.5,1
                on_release: root.toggle_button(self)
            Button:
                id:bt_hermetico
                text:'Hermetico'
                color: 0.2, 0.2, 0.2, 1
                background_normal: ''
                background_color: 0.5,0.5,0.5,1
                on_release: root.toggle_button(self)
        GridLayout:
            cols: 1  # 2 colunas
            rows: 2  # 2 linhas
            spacing: 10  # Espaçamento entre os itens (opcional)
            pos_hint: {'x': 0.05, 'y': 0.5}
            BoxLayout:
                orientation: 'vertical'
                size_hint: 0.05, 0.15
                GridLayout:
                    cols:1
                    rows:3
                    Label:
                        text: 'XV-01'
                        font_size: 14
                        size_hint_y: 0.1
                    Image:
                        source: 'imgs/valvd.png'
                        size_hint: 0.75,0.75
                    Button:
                        id: ligv1
                        text: 'DESLIGADO'
                        valign: 'middle'
                        size_hint: 1, 0.5
                        on_release: root.toggle_button(self)
            BoxLayout:
                orientation: 'vertical'
                pos_hint: {'x': 0.1, 'y': 0.25}
                size_hint: 0.05, 0.15
                GridLayout:
                    cols:1
                    rows:3
                    Label:
                        text: 'XV-02'
                        font_size: 14
                        size_hint_y: 0.1
                    Image:
                        source: 'imgs/valvd.png'
                        size_hint: 0.75,0.75
                    Button:
                        id: ligv2
                        text: 'DESLIGADO'
                        valign: 'middle'
                        size_hint: 1, 0.5
        BoxLayout:
            orientation: 'vertical'
            pos_hint: {'x': 0.18, 'y': 0.39}
            size_hint: 0.05, 0.15
            GridLayout:
                cols:1
                rows:3
                Label:
                    text: 'XV-03'
                    font_size: 14
                    size_hint_y: 0.1
                Image:
                    source: 'imgs/valvd.png'
                    size_hint: 0.75,0.75
                Button:
                    id: ligv3
                    text: 'DESLIGADO'
                    valign: 'middle'
                    size_hint: 1, 0.5
        BoxLayout:
            orientation: 'vertical'
            pos_hint: {'x': 0.27, 'y': 0.27}
            size_hint: 0.05, 0.15
            GridLayout:
                cols:1
                rows:3
                Label:
                    text: 'XV-04'
                    font_size: 14
                    size_hint_y: 0.1
                Image:
                    source: 'imgs/valvd.png'
                    size_hint: 0.75,0.75
                Button:
                    id: ligv4
                    text: 'DESLIGADO'
                    valign: 'middle'
                    size_hint: 1, 0.5
        BoxLayout:
            orientation: 'vertical'
            pos_hint: {'x': 0.1, 'y': 0.85}
            size_hint: 0.05, 0.10
            GridLayout:
                cols:1
                rows:2
                Label:
                    text: 'PIT-03'
                    font_size: 20
                VarLabel:
                    id:pressaopit03
        Label:
            text: 'FV-01'
            pos_hint: {'x':0.7,'y:':0.7}
